<script type="text/javascript">
  document.observe('dom:loaded', function(){
    scroll_to_bottom('chat_list');
    scroll_to_bottom('roll_list');
  });
</script>

<h1>Triskelion Party <%=h @party.id %></h1>

<div id="chats">
  <h2>Chat</h2>
  <ol id="chat_list">
    <% @party.chats.each do |c| %>
      <%= render c %>
    <% end %>
  </ol>

  <div class="form_container">
    <%= form_for @party.chats.build, :url=>party_chats_path(@party), :remote=>true do |f| %>
      <p>
        <%= f.text_field :content %>
        <%= f.submit 'Chat' %>
      </p>
    <% end %>
  </div>
</div>

<div id="rolls">
  <h2>Rolls</h2>
  <ol id="roll_list">
    <% @party.rolls.each do |r| %>
      <%= render r %>
    <% end %>
  </ol>

  <div class="form_container">
    <%= form_for @party.rolls.build, :url=>party_rolls_path(@party), :remote=>true do |f| %>
      <p>
        <%= f.text_field :code %>
        <%= f.submit 'Roll' %>
      </p>
    <% end %>
  </div>
</div>
